<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    android:background="@android:color/background_light"
    android:weightSum="1">

    <Button
        android:id="@+id/defaultcolorbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2"
        android:text="Choose default color" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/node_settings"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/node_label_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nodelabel"
        android:inputType="text"
        android:textColorLink="@color/colorPrimary" />

    <Button
        android:id="@+id/dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/savebtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="?attr/colorButtonNormal"
        android:text="@string/cancel"
        android:textSize="12sp" />

    <Button
        android:id="@+id/choosecolorbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/node_label_input"
        android:layout_marginTop="35dp"
        android:text="Change color" />

    <Button
        android:id="@+id/savebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/choosecolorbtn"
        android:layout_marginTop="17dp"
        android:background="@android:color/holo_blue_light"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Save"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/deletebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/choosecolorbtn"
        android:layout_alignBottom="@+id/choosecolorbtn"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_red_light"
        android:text="Delete"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/nodelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/defaultcolorbtn"
        android:text="NodeLabel"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/defaultcolorbtn"
        android:layout_alignParentStart="true"
        android:text="Label" />

</RelativeLayout>